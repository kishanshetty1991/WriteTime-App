<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

<!--    Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/shape_toolbar01">
        
<!--        Back btn-->
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_white"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:padding="5dp"/>

<!--    Logo-->
    <ImageView
        android:id="@+id/iconTv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/backBtn"
        android:layout_centerHorizontal="true"/>

<!--    Title-->
<TextView
    android:id="@+id/label1Tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Forgot Password"
    android:layout_below="@+id/iconTv"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    android:textSize="28sp"
    android:gravity="center_horizontal" />

<!--    Subtitle-->
    <TextView
        android:id="@+id/label2Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Registered Email Address to receive instructions to reset your password. "
        android:layout_below="@+id/label1Tv"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="245dp">

<!--        Input Email-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false" >
        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext01"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="@color/gray01"/>
    </com.google.android.material.textfield.TextInputLayout>
<!--        Button : Submit Instructions-->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTil"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/shape_button01"/>
    </RelativeLayout>
</RelativeLayout>
